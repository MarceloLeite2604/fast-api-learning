{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run \"main.py\"",
            "type": "shell",
            "command": "uvicorn",
            "args": [
                "src.main:app", 
                "--reload", 
                "--port", 
                "8001"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}